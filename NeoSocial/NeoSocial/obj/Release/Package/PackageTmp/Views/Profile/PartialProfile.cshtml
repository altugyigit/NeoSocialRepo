@{
    Layout = null;
}

@using NeoSocial.Database.Models;
@using NeoSocial.Business;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PartialProfile</title>
</head>
<body>
    <div>
        @{ 
                var postDatabaseList = (List<ArticlePost>)ViewData["postDatabase"];

                    int countList = postDatabaseList.Count();
    
                    if(countList == 0)
                    {
                        // http://www.icons-land.com
                        <img alt="Unfortunatly" src="~/Content/Image/sad.png" style="float:left; padding-right:8px;" /> 
                         <h3>Unfortunatially, there is nothing to show. @Session["UserId"]</h3>
                    }
                    else
                    {
     
                            foreach(var post in postDatabaseList)
                        {
                            <div class="postTemplate">
                                <img id="avatarImg" src=@ViewData["pathImage"] />
                                <div class="postContent">
                                    <h2>@post.PostHeader - @post.PostDate</h2>
                                    <h2>@post.PostContent</h2>        
                                    <h4>Like : @post.PostLikeCount Comment : @post.PostCommentID</h4>      
                                </div>  
                            </div>
                            <br />
                        } 
           
            }
            }
            catch (Exception ex)
            {

            }

            
                     
        }
    </div>
</body>
</html>
